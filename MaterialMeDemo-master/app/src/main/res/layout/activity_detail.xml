<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main"
        tools:context=".DetailActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sportsImageDetails"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/titleDetails"
            style="@style/SportDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/title_placeholder"
            android:layout_alignBottom="@id/sportsImageDetails"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

        <TextView
            android:id="@+id/newsTitleDetails"
            style="@style/SportsDetailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/news_placeholder"
            android:layout_below="@id/sportsImageDetails"
            android:textColor="?android:textColorSecondary"/>

        <TextView
            android:id="@+id/subTitleDetails"
            style="@style/SportsDetailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/lorem_epsum"
            android:layout_below="@id/newsTitleDetails"/>

    </RelativeLayout>
</ScrollView>
